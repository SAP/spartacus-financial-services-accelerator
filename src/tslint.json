{
    "extends": "../tslint.json",
    "rules": {
        "no-unused-variable": true,
        "no-unused-imports": true,
        "no-conditional-assignment": true,
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}
